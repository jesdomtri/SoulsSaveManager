<Window x:Class="SoulsSaveManager.MainWindow"
	    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="SoulsSaveManager" Height="200" Width="700" Background="#FF202121">
    <Grid Name="GridSelectGame" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="DS1" Grid.Row="0" Grid.Column="0" Height="125" Width="125" TextBlock.TextAlignment="Center" Click="ClickSelectGame" BorderBrush="{x:Null}" Background="{x:Null}">
            <Image Source="/Resource/dsicon.png"/>
        </Button>
        <Button Name="DS2" Grid.Row="0" Grid.Column="1" Height="125" Width="125" TextBlock.TextAlignment="Center" Click="ClickSelectGame" BorderBrush="{x:Null}" Background="{x:Null}">
            <Image Source="/Resource/ds2icon.png"/>
        </Button>
        <Button Name="DS3" Grid.Row="0" Grid.Column="2" Height="125" Width="125" TextBlock.TextAlignment="Center" Click="ClickSelectGame" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}">
            <Image Source="/Resource/ds3icon.png"/>
        </Button>
        <Button Name="SKR" Grid.Row="0" Grid.Column="3" Height="125" Width="125" TextBlock.TextAlignment="Center" Click="ClickSelectGame" BorderBrush="{x:Null}"  Background="{x:Null}">
            <Image Source="/Resource/skricon.png"/>
        </Button>
        <Button Name="ED" Grid.Row="0" Grid.Column="4" Height="125" Width="125" TextBlock.TextAlignment="Center" Click="ClickSelectGame" BorderBrush="{x:Null}"  Background="{x:Null}">
            <Image Source="/Resource/edicon.png"/>
        </Button>
    </Grid>
</Window>
